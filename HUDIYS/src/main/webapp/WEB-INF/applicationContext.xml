 </bean>
 <bean id="MevzuatIcerikEslemeDAO" class="hud.iys.dao.MevzuatIcerikEslemeDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="LinkDAO" class="hud.iys.dao.LinkDAO">
  <property name="sessionFactory" ref="SessionFactory" />
