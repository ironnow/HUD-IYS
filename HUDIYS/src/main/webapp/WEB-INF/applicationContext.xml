 <!-- DAO Declarations -->

 <bean id="KanunDAO" class="hud.iys.dao.KanunDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="MevzuatSetiDAO" class="hud.iys.dao.MevzuatSetiDAO">
