<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans

http://www.springframework.org/schema/beans/spring-beans-3.0.xsd

http://www.springframework.org/schema/tx

http://www.springframework.org/schema/tx/spring-tx-3.0.xsd

http://www.springframework.org/schema/context

http://www.springframework.org/schema/context/spring-context-3.0.xsd">

 <!-- Beans Declarations -->

 <bean id="Kanun" class="hud.iys.model.Kanun"/>
 <bean id="MevzuatSeti" class="hud.iys.model.MevzuatSeti"/>
 <bean id="Mevzuat" class="hud.iys.model.Mevzuat"/>
 <bean id="KanunIcerik" class="hud.iys.model.KanunIcerik"/>
 <bean id="Paragraf" class="hud.iys.model.Paragraf"/>
 <bean id="Fikra" class="hud.iys.model.Fikra"/>
 <bean id="Bent" class="hud.iys.model.Bent"/>
 <bean id="AltBent" class="hud.iys.model.AltBent"/>
  
 <!-- Service Declarations -->
 
 <bean id="KanunService" class="hud.iys.service.KanunService">
  <property name="kanunDAO" ref="KanunDAO" />
 </bean>
 <bean id="MevzuatSetiService" class="hud.iys.service.MevzuatSetiService">
  <property name="mevzuatSetiDAO" ref="MevzuatSetiDAO" />
 </bean>
 <bean id="MevzuatService" class="hud.iys.service.MevzuatService">
  <property name="mevzuatDAO" ref="MevzuatDAO" />
 </bean>
 <bean id="KanunIcerikService" class="hud.iys.service.KanunIcerikService">
  <property name="kanunIcerikDAO" ref="KanunIcerikDAO" />
 </bean>
 <bean id="ParagrafService" class="hud.iys.service.ParagrafService">
  <property name="ParagrafDAO" ref="ParagrafDAO" />
 </bean>
 <bean id="FikraService" class="hud.iys.service.FikraService">
  <property name="FikraDAO" ref="FikraDAO" />
 </bean>
 <bean id="BentService" class="hud.iys.service.BentService">
  <property name="BentDAO" ref="BentDAO" />
 </bean>
 <bean id="AltBentService" class="hud.iys.service.AltBentService">
  <property name="AltBentDAO" ref="AltBentDAO" />
 </bean>
 
 <!-- DAO Declarations -->

 <bean id="KanunDAO" class="hud.iys.dao.KanunDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="MevzuatSetiDAO" class="hud.iys.dao.MevzuatSetiDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="MevzuatDAO" class="hud.iys.dao.MevzuatDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="KanunIcerikDAO" class="hud.iys.dao.KanunIcerikDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="ParagrafDAO" class="hud.iys.dao.ParagrafDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="FikraDAO" class="hud.iys.dao.FikraDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="BentDAO" class="hud.iys.dao.BentDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 <bean id="AltBentDAO" class="hud.iys.dao.AltBentDAO">
  <property name="sessionFactory" ref="SessionFactory" />
 </bean>
 
 <!-- Data Source Declaration -->
 
 

<bean id="DataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="com.mysql.jdbc.Driver" />
    <property name="url" value="jdbc:mysql://localhost:3306/testdb?useUnicode=true&amp;characterEncoding=utf8" />
    <property name="username" value="root" />
    <property name="password" value="Hud1234" />
</bean>

 <!-- Session Factory Declaration -->
 <bean id="SessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
  <property name="dataSource" ref="DataSource" />
  <property name="annotatedClasses">
   <list>
    <value>hud.iys.model.Kanun</value>
    <value>hud.iys.model.MevzuatSeti</value>
    <value>hud.iys.model.Mevzuat</value>
    <value>hud.iys.model.KanunIcerik</value>
    <value>hud.iys.model.Paragraf</value>
    <value>hud.iys.model.Fikra</value>
    <value>hud.iys.model.Bent</value>
    <value>hud.iys.model.AltBent</value>
   </list>
  </property>
  <property name="hibernateProperties">
   <props>
    <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
    <prop key="hibernate.show_sql">true</prop>
    <prop key="hibernate.connection.useUnicode">true</prop>
	<prop key="hibernate.connection.characterEncoding">utf8</prop>
   </props>
  </property>
 </bean>

 <!-- Enable the configuration of transactional behavior based on annotations -->
    <tx:annotation-driven transaction-manager="txManager"/>

 <!-- Transaction Manager is defined -->
    <bean id="txManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
       <property name="sessionFactory" ref="SessionFactory"/>
    </bean>

</beans>